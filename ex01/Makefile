NAME = brain
CC = c++
CPPFLAGS = -Wall -Wextra -Werror -std=c++98 -Wshadow -Wno-shadow
RM = rm -f
SOURCES =	./main.cpp \
			./Animal.cpp \
			./Cat.cpp \
			./Dog.cpp \
			./WrongAnimal.cpp \
			./WrongCat.cpp \
			./Brain.cpp

#build everything
all: $(NAME)

#creates programm
$(NAME): $(SOURCES)
	$(CC) $(CPPFLAGS) $(SOURCES) -o $(NAME)

#removes executable
clean:
	$(RM) $(NAME)

#removes executable and rebuild it
re: clean all